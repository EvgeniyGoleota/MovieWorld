<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="photo"
                type="com.escorp.movieworld.data.models.Image" />

        <variable
                name="clickListener"
                type="com.escorp.movieworld.utils.interfaces.RecyclerViewOnItemClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick='@{() -> clickListener.onItemClick(-1, "")}'
            android:orientation="vertical">

        <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/title_photos"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:imageUrl="@{photo.getFormattedFilePath()}"
                app:placeholder="@{@drawable/ic_placeholder}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>